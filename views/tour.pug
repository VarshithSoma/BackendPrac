extends base
include _reviewCard
block append head
    script(src='https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.js')
    link(href='https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.css' rel='stylesheet')
    script(src='https://js.stripe.com/v3/')
mixin overviewBox(label,text,icon)
    .overview-box__detail
        svg.overview-box__icon
            use(xlink:href=`/img/icons.svg#icon-${icon}`)
        span.overview-box__label=label 
        span.overview-box__text=text
block content 
    .var
        section.section-header
            .header__hero
                .header__hero-overlay &nbsp;
                img.header__hero-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)

            .heading-box
                h1.heading-primary
                    span=tour.name
                .heading-box__group
                    .heading-box__detail
                        svg.heading-box__icon
                            use(xlink:href='/img/icons.svg#icon-clock')
                        span.heading-box__text=`${tour.duration} days`
                    .heading-box__detail
                        svg.heading-box__icon
                            use(xlink:href='/img/icons.svg#icon-map-pin')
                        span.heading-box__text=tour.startLocation.description
        section.section-map
            #map(data-locations=`${JSON.stringify(tour.locations)}`) 

    section.section-description
        .overview-box
            .overview-box__group
                h2.heading-secondary.ma-bt-lg Quick facts
                - const date=tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
                +overviewBox('Next date',date,'calendar')
                +overviewBox('Difficulty',tour.difficulty,'trending-up')
                +overviewBox('Participants',tour.maxGroupSize,'user')
                +overviewBox('Rating',`${tour.ratingsAverage} / 5`,'star')
        .description-box
            h2.heading-secondary.ma-bt-lg=`About ${tour.name} tour`
            - const paragraphs=tour.description.split(`\n`);
            each p in paragraphs
                p.description__text=p
        .cta
            .cta__content
                if user
                    button.btn.btn--green.span-all-rows#book-tour(data-tour-id=`${tour.id}`) Book now!
                else
                    a.btn.btn--green.span-all-rows(href='/login') Login to Buy!!
    section.section-pictures
        each img, i in tour.images
            .picture-box
                img.picture-box__img(src=`/img/tours/${img}`, alt=`The Park Camper Tour ${i+1}`)
                class=`picture-box__img--${i+1}`
    section.section-reviews
        .revad
            if user 
                section.section-reviews-user
                  form.add-review
                    h2.heading-secondary.ma-bt-lg Add Review
                    input#reviewText(type="text" class="review-input css-input" placeholder="Fantastic Refreshing" data-id=tour.id data-user-id=user._id)
                    input(type='number' class="css-input rating-num" name='rating' placeholder="Give rating")
                    .form__group
                        button.btn.btn--green.revsub(type='submit') Submit

            .reviews
                each review in tour.reviews
                    +reviewCard(review)
        