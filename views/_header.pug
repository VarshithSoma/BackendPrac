header.header
    script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.2/axios.min.js') 
    script(src='https://js.stripe.com/v3/')
    nav.nav.nav--tours 
        a.nav__el(href='/') WanderWhiz
    nav.nav.nav--user
    if user 
        a.nav__el.nav__el--logout Logout
        a.nav__el(href='/me') 
            img.nav__user-img(src=`/img/users/${user.photo}` alt='User photo')
            span=user.name.split(' ')[0] 
    else
        .vardivone
            a.nav__el(href='/login' class='loginbtn') Login
            a.nav__el.nav__el--cta(href='/signup') Signup